{
    "version": "2.0.0",
    "runner": "terminal",
    "type": "shell",
    "echoCommand": true,
    "presentation": {
        "reveal": "always"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "Build C",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "Build C++",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Execute C",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "type": "shell",
            "dependsOn": "Build C"
        },
        {
            "label": "Execute C++",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "type": "shell",
            "dependsOn": "Build C++"
        },
        {
            "label": "Build, Execute, Delete C",
            "command": "rm",
            "group": "build",
            "args": ["${fileDirname}/${fileBasenameNoExtension}"],
            "dependsOn": ["Execute C"],
            "detail": "빌드, 실행 후 실행파일 삭제"
        },
        {
            "label": "Build, Execute, Delete C++",
            "command": "rm",
            "group": "build", 
            "args": ["${fileDirname}/${fileBasenameNoExtension}"],
            "dependsOn": ["Execute C++"],
            "detail": "빌드, 실행 후 실행파일 삭제"
        },
        {
            "label": "Cleaner",
            "type": "shell",
            "command": "rm -f *.exe *.s *.o *.out && find . -maxdepth 1 -type f -not -name '*.*' -not -name '.*' -delete",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "빌드 파일들과 실행파일들 삭제",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "MallocLab - clean",
            "type": "shell",
            "command": "make clean",
            "args": [],
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/malloc-lab"
            }
        },
        {
            "label": "MallocLab - build",
            "type": "shell",
            "command": "make",
            "args": [],
            "group": "build",
            "dependsOn": [
                "Clean"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/malloc-lab"
            }
        },
        {
            "label": "MallocLab - gprof",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "gprof mdriver gmon.out > result.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/malloc-lab"
            },
            "problemMatcher": []
        },
        {
            "label": "Tiny - build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/webproxy-lab/tiny && make",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/webproxy-lab/tiny"
            }
        },
        {
            "label": "Tiny - clean",
            "type": "shell",
            "command": "cd ${workspaceFolder}/webproxy-lab/tiny && make clean",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/webproxy-lab/tiny"
            }
        },
        {
            "label": "Tiny - C&B",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Tiny - clean",
                "Tiny - build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Proxy - build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/webproxy-lab && make",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/webproxy-lab"
            }
        },
        {
            "label": "Proxy - clean",
            "type": "shell",
            "command": "cd ${workspaceFolder}/webproxy-lab && make clean",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/webproxy-lab"
            }
        },
        {
            "label": "Proxy - C&B",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Proxy - clean",
                "Proxy - build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
